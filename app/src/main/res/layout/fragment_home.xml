<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_standard"
    tools:context=".FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:gravity="center"
            android:text="Home"
            android:textColor="#009688"
            android:textSize="25dp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="380dp"
                android:layout_height="334dp"
                android:layout_weight="1"
                android:src="@drawable/plastico" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="351dp"
            android:layout_height="191dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="“El paso más grande que podemos dar en cuanto al reciclaje es comprar productos reciclados, para cerrar el círculo. Si tenemos elección, mejor optar por productos que contengan materiales reciclados”"
            android:textColor="#009688" />

    </LinearLayout>


</RelativeLayout>